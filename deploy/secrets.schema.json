{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "BINNBOT Secrets Schema",
  "type": "object",
  "properties": {
    "DOCKERHUB_USERNAME": { "type": "string", "description": "Docker Hub kullanıcı adı" },
    "DOCKERHUB_TOKEN":    { "type": "string", "description": "Docker Hub Access Token" },
    "STAGING_HOST":       { "type": "string", "description": "Staging sunucu host/IP" },
    "STAGING_USER":       { "type": "string", "description": "SSH kullanıcı adı (örn. ubuntu)" },
    "STAGING_SSH_KEY":    { "type": "string", "description": "SSH private key (PEM)" },
    "STAGING_ENV_FILE":   { "type": "string", "description": ".env.staging içeriği (çok satırlı)" }
  },
  "required": [
    "DOCKERHUB_USERNAME",
    "DOCKERHUB_TOKEN",
    "STAGING_HOST",
    "STAGING_USER",
    "STAGING_SSH_KEY",
    "STAGING_ENV_FILE"
  ]
}
